---
import { changeLanguage, t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
import Layout from "@/layouts/Layout.astro";
import About from "@/components/sections/About.astro";
import Education from "@/components/sections/Education.astro";
import Certificates from "@/components/sections/Certificates.astro";
import Experience from "@/components/sections/Experience.astro";
import Hero from "@/components/sections/Hero.astro";
// import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import Languages from "@/components/sections/Languages.astro";
import Reference from "@/components/sections/References.astro";
import Letter from "@/components/sections/Letter.astro";

changeLanguage("es");
---

<Layout title={`Portafolio de ${t("basics.name")} - ${t("basics.label")}`}>
  <main>
    <header class="no-print">
      <LanguageSelector showFlag={true} class="my-select-class" />
    </header>

    <Hero />
    <About />
    <Experience />
    <Education />
    <Certificates />
    <!-- <Projects /> -->
    <Skills />
    <Languages />
    <Reference />
    <Letter />
  </main>

  <KeyboardManager />
</Layout>

<style>
  header {
    max-width: 700px;
    margin: 0 auto 48px;
    display: flex;
    justify-content: flex-end;
  }

  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }
</style>
