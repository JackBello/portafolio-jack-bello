---
import { t } from "i18next";
import Section from "../Section.astro";

import type { Languages } from "@/cv";

const languages = t("languages", { returnObjects: true }) as Languages[];
---

<Section title={t("global.languages")}>
  <ul>
    {
      languages.map(({ fluency, language }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{language}</h3>
                  <h4>{fluency}</h4>
                </div>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 5px;
  }
</style>
